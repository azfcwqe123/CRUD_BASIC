{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">번호</th>
        <th scope="col">제목</th>
        <th scope="col">내용</th>
    </tr>
    </thead>
    <tbody>
    {{#Post}}
        <tr>
            <th>{{id}}</th>
            <td>{{title}}</td>
            <td>{{content}}</td>
        </tr>
    {{/Post}}
    </tbody>
</table>
<a href="/articles/{{Post.id}}/edit" class = "btn btn-primary">Edit</a>
<a href="/articles/{{Post.id}}/delete" class="btn btn-danger">Delete</a>